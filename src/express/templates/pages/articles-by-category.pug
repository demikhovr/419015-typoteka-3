extends ../layout
include ../blocks/header
include ../blocks/themes
include ../blocks/preview

block title
  - const title = 'Типотека'
block content
  .wrapper
    +header()
    main.articles-category
      h1 Бизнес
      section.articles-category__theme-list
        h2.visually-hidden Список тем
        +themes(themes, activeIndex)
      section.articles-category__list.preview
        h2.visually-hidden Список превью статей
        ul.preview__list
          each preview in previews
            li.preview__item(class=!preview.image && 'preview__item--noimage')
              +preview(preview)
    include ../blocks/footer
